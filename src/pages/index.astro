---
import "../styles/generel.css";
import Bigbutton from "../components/Bigbutton.astro";
---

<html lang="da">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
		<title>Home</title>
	</head>
	<body>
		
		<main>
			<div class="top_wrapper">
			<h1 class="clf_index">COPENHAGEN LIGHT FESTIVAL</h1>
			<div class="vektor_index">
			<img src="src/img/clf-billeder/udenlys.webp" alt="">
			</div>
			<div class="knap_index">
			<Bigbutton/>
			</div>
			</div>
		</main>

		<style>
			main {
				margin: 0 auto;
			}
			body {
				background-color: #0B0A1E;
			}
			.top_wrapper {
				display: grid;
				grid-template-columns: 1fr 1fr 1fr 1fr;
				grid-template-rows: 1fr 1fr 1fr 1fr;
			}
			.clf_index {
				grid-row: 1 / span 2;
				grid-column: 1 / span 4;
				font-size: 15rem;
				
			}
			h1 {
    background: linear-gradient(to right, #caefef, #f3b8f1, #ec8fe9, #ec64e8);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
	
}
			.vektor_index {
				grid-row: 1 / span 4;
				grid-column: 1 / span 4;
			}
			.vektor_index img {
				width: 100%;
			}
			.knap_index {
				grid-row: 2;
				grid-column: 3;
			}
		</style>

	</body>
</html>
